# API Keys
GROQ_API_KEY=your_groq_api_key_here                # Groq AI API key for LLM access
SYNAPTIQ_API_KEY=your_synaptiq_api_key_here        # Internal API key for Synaptiq services

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/synaptiq?retryWrites=true&w=majority  # MongoDB connection string

# Redis for rate limiting
REDIS_URL=redis://localhost:6379                   # Redis connection string for rate limiting

# Rate limiting configuration
RATE_LIMIT_ANONYMOUS=10                            # Number of requests allowed for anonymous users
RATE_LIMIT_FREE=50                                 # Number of requests allowed for free tier users
RATE_LIMIT_PREMIUM=200                             # Number of requests allowed for premium tier users
RATE_LIMIT_WINDOW=3600                             # Time window in seconds for rate limiting

# Email credentials for contact form
ZOHO_USER=your_email@example.com                   # Email address for sending emails
ZOHO_APP_PASSWORD=your_app_password                # App password for email service

# Python API for scientific simulations
PYTHON_API_URL=https://sitebackend-production.up.railway.app/simulate  # URL for Python API service
PYTHON_API_KEY=your_python_api_key                 # Authentication key for Python API

# OpenAI (if used as fallback)
OPENAI_API_KEY=your_openai_api_key                 # OpenAI API key for fallback LLM

# Scalar API for vector database
SCALAR_API_KEY=your_scalar_api_key                 # Scalar API key for vector operations

# Authentication (for JWT tokens)
JWT_SECRET=your_jwt_secret_key                     # Secret key for JWT token generation
NEXTAUTH_SECRET=your_nextauth_secret               # Secret for NextAuth.js
NEXTAUTH_URL=http://localhost:3000                 # Base URL for NextAuth.js
